<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context="com.baswarajmamidgi.virtualmtp.Faculty.Mentee_info">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorPrimary">
</RelativeLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/white"
        android:src="@drawable/profile_pic_two"
        android:id="@+id/profile_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:layout_marginTop="10dp"
        android:id="@+id/mentee_name"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="Holly Holm"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mentee_name"
        android:background="@android:color/black">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/branch"
        android:layout_below="@+id/mentee_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CSE"
        android:layout_marginTop="10dp"
        android:id="@+id/branch_name"
        android:textColor="#000"
        android:layout_below="@+id/mentee_name"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@+id/branch_name"
        android:background="@android:color/black">
    </View>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view2"
        android:id="@+id/view3"
        android:background="@android:color/black">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Year"
        android:layout_below="@+id/view2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="3rd year"
        android:layout_marginTop="10dp"
        android:id="@+id/Year_name"
        android:textColor="#000"
        android:layout_below="@+id/view2"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view4"
        android:layout_below="@+id/Year_name"
        android:background="@android:color/black">
    </View>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view4"
        android:id="@+id/view5"
        android:background="@android:color/black">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Contact"
        android:layout_below="@+id/view5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="98480142868"
        android:layout_marginTop="10dp"
        android:id="@+id/Contact_number"
        android:textColor="#000"
        android:layout_below="@+id/view4"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view6"
        android:layout_below="@+id/Contact_number"
        android:background="@android:color/black">
    </View>

</RelativeLayout>
</ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_call_black_24dp"
        tools:ignore="RtlCompat" />
</RelativeLayout>
